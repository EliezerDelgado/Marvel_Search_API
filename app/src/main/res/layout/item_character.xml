<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
    <variable
        name="item"
        type="com.eliezer.marvel_search_api.models.dataclass.Character" />
        <variable
            name="img"
            type="android.graphics.drawable.Drawable" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:shapeAppearance="@null">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_gravity="center">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/item_character_image_view_photo"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:layout_gravity="top|center"
            android:src="@{img}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_character_text_view_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            style="@style/EliezerMarvel.TextView.Body"
            android:layout_margin="5dp"
            android:textAlignment="center"
            android:text="@{item.name}"
            app:layout_constraintTop_toBottomOf="@+id/item_character_image_view_photo"
            app:layout_constraintRight_toRightOf="parent"/>
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/item_character_image_button_favorite"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                style="@style/EliezerMarvel.ImageButton"
                android:layout_gravity="top|center"
                android:src="@{item.favorite ?  @drawable/ic_star_on : @drawable/ic_star}"
                app:layout_constraintTop_toTopOf="@+id/item_character_image_view_photo"
                app:layout_constraintRight_toRightOf="@+id/item_character_image_view_photo"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>