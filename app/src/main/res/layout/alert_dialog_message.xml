<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="wrap_content"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/alert_dialog_message_image_view_ico"
        android:layout_width="@dimen/image_medium_width"
        android:layout_height="@dimen/image_medium_width"
        android:layout_margin="@dimen/margin_intermediate"
        android:layout_gravity="top|center"
        android:src="@drawable/ic_auto_renew"
        style="@style/EliezerMarvel.ImageButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/alert_dialog_message_text_view_message"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="@style/EliezerMarvel.TextView.Body"
            android:textAlignment="center"
            android:layout_margin="@dimen/margin_tiniest"
            android:text="@string/alert_dialog_message_text_view_message__text"
            app:layout_constraintLeft_toRightOf="@+id/alert_dialog_message_image_view_ico"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>